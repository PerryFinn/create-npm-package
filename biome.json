{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      ".git/*",
      "build/*",
      "dist/*",
      "node_modules/*",
      "assets/*",
      "bun.lockb",
      "pnpm-lock.yaml",
      ".idea/*",
      ".changeset"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "none",
      "semicolons": "always",
      "indentStyle": "space",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "attributePosition": "auto"
    }
  }
}
