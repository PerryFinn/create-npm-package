{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.git/**/*",
      "!**/build/**/*",
      "!**/dist/**/*",
      "!**/node_modules/**/*",
      "!**/assets/**/*",
      "!**/bun.lock",
      "!**/pnpm-lock.yaml",
      "!**/.idea/**/*",
      "!**/.changeset/**/*",
      "!**/.turbo/**/*",
      "!**/coverage/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "none",
      "semicolons": "always",
      "indentStyle": "space",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "attributePosition": "auto"
    }
  }
}
